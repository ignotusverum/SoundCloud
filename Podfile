source 'https://github.com/CocoaPods/Specs.git'

def pods

# Utilities
swift_version = "3.0"
pod 'PromiseKit', '~> 4.0'

# Extensionsb
pod 'EZSwiftExtensions'

# Core Data
pod 'CoreStore'

# Networking
pod 'Alamofire'

pod 'SwiftyJSON'

# swift integration
use_frameworks!

# who cares about warnings
inhibit_all_warnings!

end

target 'SoundCloud' do
    pods
end
